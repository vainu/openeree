<%= this.partial({url: 'templates/header.ejs'}) %>
<%= this.partial({url: 'templates/sidebar.ejs'}) %>

<div class="medium-9 large-10 columns content">
	<div class="row">
		<div class="small-12 columns">

			<h1 class="name"><%= company.name %></h1>
			<a href="https://www.inforegister.ee/otsing/<%= company.reg_code%>" target="_new"><%= company.reg_code %></a>
			<h4 class="subheader">Firma</h4>

			<div>
				<h3>Juhatus</h3>
				<ul class="employees">
				<% for(var key in company.employees){%>
					<li>
						<span class="name"><a href="person/<%= company.employees[key].employee_id %>"><%= company.employees[key].first_name %> <%= company.employees[key].last_name %></a></span>
					</li>
				<% } %>
				</ul>
			</div>
			<div class="row">
				<div class="large-6 columns">
					<h3>Võidetud hanked</h3>
						<ul class="procsTo top-list">
							<% for(var key in company.procsTo){%>
								<a href="procurements/<%= company.procsTo[key].id %>">
									<li>
										<div class="row">
											<div class="small-8 columns">
											<span class="name"><%= company.procsTo[key].description %></span>
										</div>
										
										<div class="small-4 columns">
											<span class="amount"><%= parseInt(company.procsTo[key].contract_price) %>€</span>
										</div>
										</div>
										<div class="row">
											<div class="small-12 columns">
												<span class="time"><%= company.procsTo[key].signed_on.substr(8,2) %>.<%= company.procsTo[key].signed_on.substr(5,2) %>.<%= company.procsTo[key].signed_on.substr(0,4) %></span>
											</div>
										</div>
									</li>
								</a>
							<% } %>
						</ul>
				</div>
				<div class="large-6 columns">
					<h3>Korraldatud hanked</h3>
			<ul class="procsBy top-list">
				<% for(var key in company.procsBy){%>
					<a href="procurements/<%= company.procsBy[key].id %>">
						<li>
							<div class="row">
								<div class="small-8 columns">
									<span class="name"><%= company.procsBy[key].description %></span>
								</div>
								<div class="small-4 columns">
									<span class="amount"><%= parseInt(company.procsBy[key].contract_price) %>€</span>
								</div>
							</div>
							<div class="row">
								<div class="small-12 columns">
									<span class="time"><%= company.procsBy[key].signed_on.substr(8,2) %>.<%= company.procsBy[key].signed_on.substr(5,2) %>.<%= company.procsBy[key].signed_on.substr(0,4) %></span>
								</div>
							</div>			
						</li>
					</a>
				<% } %>
			</ul>
				</div>
			</div>
			
		</div>
	</div>
</div>