<%= this.partial({url: 'templates/header.ejs'}) %>
<%= this.partial({url: 'templates/sidebar.ejs'}) %>

<div class="medium-9 large-10 columns content party-view">
	<div class="row">
		<div class="small-12 columns">

			<img class="party-image" src="<%= party.metadata.image %>" alt="">
			<div class="row">
				<div class="medium-8 columns">
					<h2 class="name"><%= party.name %></h2>
				</div>
				<div class="medium-4 columns">
					<a class="party-link" href="<%= party.metadata.website %>" target="_new"><%= party.metadata.website %></a>
				</div>
			</div>
			<h4 class="subheader">Erakond</h4>

			<div class="callout">
				<div class="row party-data">
					<div class="medium-4 columns">
						<h5>Aadress</h5>
						<p ><%= party.metadata.street_address %></p>
					</div>
					<div class="medium-2 text-center columns">
						<p class="data"><%= party.metadata.member_count %></p>
						<h5>Liikmete arv</h5>
					</div>
					<div class="medium-2 text-center columns">
						<p class="data"><span class="amount"><%= party.metadata.gov_funding %>€</span></p>
						<h5>Riigitoetus</h5>
					</div>
					<div class="medium-2 text-center columns">
						<p class="data"><span class="amount"><%= party.metadata.donation_sum %>€</span></p>
						<h5>2015 Annetused</h5>
					</div>
					<div class="medium-2 text-center columns">
						<p class="data"><span class="amount"><%= party.metadata.member_fee %>€</span></p>
						<h5>Liikmemaks</h5>
					</div>
				</div>
				
			</div>
				<div class="tab-wrap">
					<div class="tab-nav active" data-id="donators">
						<h3>Top Annetajad <span class="metainfo">(2013/2014/2015)</span></h3>
					</div>
					<div class="tab-nav" data-id="members">
						<h3>Erakonna liikmed</h3>
					</div>
					
					<div class="tab-content active" data-id="donators">
						<ul class="top-list">
							<% for(var key in donators){%>
								<a href="person/<%= donators[key].id %>">
									<% var listClass = 'list-color';
										var dataColor = 0;
										if(donators[key].party.length){
											dataColor = donators[key].party[0].id;
										}
									%>
									<li class="<%= listClass %>" <% if(dataColor){%>data-color="<%= dataColor %>"<% } %>>
										<span class="name"><%= donators[key].first_name %> <%= donators[key].last_name %></span>
										<span class="amount"><%= donators[key].total_amount %>
											<span class="currency">€</span>
										</span>
									</li>
								</a>
							<% } %>
						</ul>
					</div>
					<div class="tab-content" data-id="members">
						<ul class="top-list">
							<% for(var key in members){%>
								<a href="person/<%= members[key].id %>">
									<li>
										<span class="name"><%= members[key].first_name %> <%= members[key].last_name %></span>
									</li>
								</a>
							<% } %>
						</ul>
					</div>
				</div>	
		</div>
	</div>
</div>